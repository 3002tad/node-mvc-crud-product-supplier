<% layout('layout') -%>
<div class="text-center">
    <div class="mb-4">
        <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
    </div>
    
    <h1 class="display-4 text-danger">Oops! Something went wrong</h1>
    
    <div class="alert alert-danger mx-auto" style="max-width: 600px;">
        <h4 class="alert-heading">
            <i class="fas fa-bug"></i> Error Details
        </h4>
        <p class="mb-2">
            <strong>Message:</strong> <%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %>
        </p>
        <% if (typeof error !== 'undefined' && error) { %>
            <hr>
            <p class="mb-0">
                <strong>Details:</strong> <%= error %>
            </p>
        <% } %>
    </div>
    
    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Go Back
        </a>
        <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i> Go Home
        </a>
    </div>
    
    <div class="mt-4">
        <small class="text-muted">
            If this problem persists, please contact the system administrator.
        </small>
    </div>
</div>

