<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3><i class="fas fa-truck"></i> <%= title %></h3>
                <div>
                    <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form method="POST" action="/suppliers/<%= supplier._id %>" class="d-inline" onsubmit="return confirmDelete('supplier')">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-id-badge"></i> Supplier Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <th width="30%">Name:</th>
                                <td><strong><%= supplier.name %></strong></td>
                            </tr>
                            <tr>
                                <th>Address:</th>
                                <td><%= supplier.address %></td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>
                                    <a href="tel:<%= supplier.phone %>">
                                        <i class="fas fa-phone"></i> <%= supplier.phone %>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-info-circle"></i> System Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <th width="30%">Created:</th>
                                <td><%= supplier.createdAt.toLocaleDateString() %> at <%= supplier.createdAt.toLocaleTimeString() %></td>
                            </tr>
                            <tr>
                                <th>Updated:</th>
                                <td><%= supplier.updatedAt.toLocaleDateString() %> at <%= supplier.updatedAt.toLocaleTimeString() %></td>
                            </tr>
                            <tr>
                                <th>ID:</th>
                                <td><code><%= supplier._id %></code></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-box"></i> Products</h5>
                <a href="/products/new" class="btn btn-sm btn-success">
                    <i class="fas fa-plus"></i> Add Product
                </a>
            </div>
            <div class="card-body">
                <% if (products.length === 0) { %>
                    <div class="text-center text-muted">
                        <i class="fas fa-box fa-2x mb-2"></i>
                        <p>No products from this supplier</p>
                        <a href="/products/new" class="btn btn-sm btn-outline-success">
                            <i class="fas fa-plus"></i> Add First Product
                        </a>
                    </div>
                <% } else { %>
                    <div class="list-group list-group-flush">
                        <% products.forEach(product => { %>
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <a href="/products/<%= product._id %>" class="text-decoration-none">
                                                <%= product.name %>
                                            </a>
                                        </h6>
                                        <p class="mb-1">
                                            <strong>$<%= product.price.toFixed(2) %></strong>
                                            <span class="text-muted">â€¢ Qty: <%= product.quantity %></span>
                                        </p>
                                    </div>
                                    <div class="btn-group-vertical btn-group-sm">
                                        <a href="/products/<%= product._id %>" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/products/<%= product._id %>/edit" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/products" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list"></i> View All Products
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/suppliers" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Suppliers
    </a>
</div>

<%- include('../partials/footer') %>