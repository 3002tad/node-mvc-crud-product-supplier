<%- include('../partials/header') %>

<!-- Page Header with Breadcrumb -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nhà cung cấp</li>
            </ol>
        </nav>
        <h2 class="mb-0">
            <i class="fas fa-truck text-primary"></i> <%= title %>
        </h2>
    </div>
    <a href="/suppliers/new" class="btn btn-primary btn-lg shadow">
        <i class="fas fa-plus me-2"></i> Thêm nhà cung cấp
    </a>
</div>

<!-- Error Alert -->
<% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Main Content Card -->
<div class="card shadow-lg border-0">
    <% if (suppliers.length === 0) { %>
        <!-- Empty State -->
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-truck fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Chưa có nhà cung cấp nào</h4>
            <p class="text-muted mb-4">Bắt đầu bằng cách thêm nhà cung cấp đầu tiên của bạn</p>
            <a href="/suppliers/new" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i> Thêm nhà cung cấp đầu tiên
            </a>
        </div>
    <% } else { %>
        <!-- Table Header -->
        <div class="card-header bg-light border-0 py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2 text-primary"></i>
                        Danh sách nhà cung cấp
                        <span class="badge bg-primary ms-2"><%= suppliers.length %></span>
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-filter"></i> Lọc
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-download"></i> Xuất
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Content -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-borderless mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-id-badge me-2"></i>Tên nhà cung cấp
                            </th>
                            <th>
                                <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                            </th>
                            <th>
                                <i class="fas fa-phone me-2"></i>Số điện thoại
                            </th>
                            <th>
                                <i class="fas fa-calendar me-2"></i>Ngày tạo
                            </th>
                            <th class="text-center" width="150">
                                <i class="fas fa-cogs me-2"></i>Thao tác
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% suppliers.forEach((supplier, index) => { %>
                            <tr class="fade-in">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <%= supplier.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold"><%= supplier.name %></h6>
                                            <small class="text-muted">ID: <%= supplier._id.toString().slice(-6) %></small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= supplier.address %>">
                                        <%= supplier.address %>
                                    </span>
                                </td>
                                <td>
                                    <a href="tel:<%= supplier.phone %>" class="text-decoration-none">
                                        <i class="fas fa-phone text-success me-1"></i>
                                        <%= supplier.phone %>
                                    </a>
                                </td>
                                <td>
                                    <div>
                                        <small class="text-muted d-block">
                                            <%= (supplier.createdAt ? supplier.createdAt.toLocaleDateString('vi-VN') : '') %>
                                        </small>
                                        <small class="text-muted">
                                            <%= (supplier.createdAt ? supplier.createdAt.toLocaleTimeString('vi-VN', {hour: '2-digit', minute: '2-digit'}) : '') %>
                                        </small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a href="/suppliers/<%= supplier._id %>" 
                                           class="btn btn-outline-info btn-sm" 
                                           title="Xem chi tiết"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/suppliers/<%= supplier._id %>/edit" 
                                           class="btn btn-outline-warning btn-sm" 
                                           title="Chỉnh sửa"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" action="/suppliers/<%= supplier._id %>" class="d-inline">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger btn-sm" 
                                                    title="Xóa"
                                                    data-bs-toggle="tooltip"
                                                    onclick="return confirmDelete('nhà cung cấp')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Table Footer -->
        <div class="card-footer bg-light border-0">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Hiển thị <%= suppliers.length %> nhà cung cấp
                    </small>
                </div>
                <div>
                    <a href="/products" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-box me-1"></i> Xem sản phẩm
                    </a>
                    <a href="/suppliers/new" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i> Thêm mới
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- Initialize tooltips -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Bootstrap tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    
    // Add fade-in animation to rows
    const rows = document.querySelectorAll('tbody tr');
    rows.forEach((row, index) => {
        setTimeout(() => {
            row.classList.add('slide-in');
        }, index * 100);
    });
});
</script>

<%- include('../partials/footer') %>